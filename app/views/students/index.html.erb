<h1>List of students</h1>
<table border>
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.age %></td>
                <td><%= link_to 'Show', student %></td>
                <td><%= button_to 'Edit', edit_student_path(student), method: 'get' %></td>
                <td><%= button_to 'Remove', student_path(student), method: 'delete' %></td>
            </tr>
        <% end %>
        <%= link_to "Add new Student", new_student_path%>
    </tbody>
</table>